<div class="container">
  <div class="ghostly-container text-center">
    <h1>Are you a Trivia stud?</h1>
    <br />
    
     <div class="container text-center" id="tag_cloud">
      <% tag_cloud Question.tag_counts, %w[s m l] do |tag, css_class| %>
        <%= link_to tag.name, tag_path(tag.name), class: css_class %>
      <% end %>
    </div>
    <br />

    <div>
      <% @questions.each do |question| %>
        <p><%= link_to question.description, question %></p>
        
      <% end %>
    </div>
   
    <%= simple_form_for @questions do |f| %>
      <%= f.input :category, label: 'Category:', collection: Question::CATEGORIES, :prompt => "Filter Trivia by Category", value_method: :first %>
      
      <br />
      <%= f.submit 'Filter', class: 'btn btn-danger' %>
    <% end %>



  </div>
</div>
