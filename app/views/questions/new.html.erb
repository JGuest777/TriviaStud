<div class="container">
  <div class="text-center">
    <h1>Create Trivia</h1>

    <%= simple_form_for @question do |f| %>
      <%= f.input :description %>
      <%= f.input :answer %>
      <%= f.input :bad_answer_one %>
      <%= f.input :bad_answer_two %>
      <%= f.input :category %>
      <br />
      <%= f.submit 'Create', class: 'btn btn-danger' %>
    <% end %>
  </div>
</div>
